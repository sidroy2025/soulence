# Environment
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soulence
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=soulence-documents

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=soulence-documents

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_CRISIS_DETECTION=true
ENABLE_AI_BUDDY=true
ENABLE_DOCUMENT_PROCESSING=true

# Monitoring
LOG_LEVEL=info

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@soulence.app

# Twilio (for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Google APIs
GOOGLE_VISION_API_KEY=your-google-vision-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret

# Kafka (for event streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=soulence-agents
KAFKA_GROUP_ID=feedback-processing

# InfluxDB (for time-series data)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=soulence
INFLUXDB_BUCKET=mood-metrics